# Example Environment Variables
# Copy this file to .env for local development without Docker
# Copy this file to .env.production for production deployment

#server config
PORT=5000
NODE_ENV=development
LOG_LEVEL=info

# Database config
# Development (local): Use local Neon or regular PostgreSQL
# Development (Docker): Will be set by docker-compose.dev.yml
# Production: Use actual Neon Cloud URL
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret
# Development: Any random string
# Production: MUST be a strong random secret
JWT_SECRET=your_jwt_secret_key_here

# Arcjet Security
ARCJET_KEY=your_arcjet_key_here

# Optional Settings
ENABLE_LOGGING=true
PRETTY_LOGS=true
